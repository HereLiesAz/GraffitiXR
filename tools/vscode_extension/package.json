{
  "name": "antigravity-android-debugger",
  "displayName": "Antigravity Android Debugger",
  "description": "Android Debugger & Crash Monitor. Designed for Antigravity & Gemini.",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "graffitixr",
  "repository": {
    "type": "git",
    "url": "https://github.com/StartHere/GraffitiXR"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "androidai.buildAndRun",
        "title": "Ask Antigravity: Build & Debug",
        "icon": "$(play)"
      },
      {
        "command": "androidai.toggleLoop",
        "title": "Toggle Continuous Mode",
        "icon": "$(sync)"
      },
      {
        "command": "androidai.clearHistory",
        "title": "Clear AI History",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "androidai-explorer",
          "title": "Android AI Runner",
          "icon": "$(bug)"
        }
      ]
    },
    "views": {
      "androidai-explorer": [
        {
          "id": "android-ai-runner-view",
          "name": "Antigravity Controls",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "androidai.buildAndRun",
          "when": "view == android-ai-runner-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "androidai.buildAndRun",
          "when": "view == android-ai-runner-view",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Antigravity Android",
      "properties": {
        "androidai.autoDebug": {
          "type": "boolean",
          "default": false,
          "description": "Automatically send errors to Antigravity/Gemini without asking."
        },
        "androidai.aiProvider": {
          "type": "string",
          "enum": ["vscode-chat", "gemini-cli"],
          "default": "vscode-chat",
          "description": "How to contact the AI. 'vscode-chat' opens the IDE side panel (Cursor/Copilot/Antigravity). 'gemini-cli' runs the 'gemini' command in the terminal."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
